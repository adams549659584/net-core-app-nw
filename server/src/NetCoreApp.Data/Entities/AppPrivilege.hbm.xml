<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-mapping
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns="urn:nhibernate-mapping-2.2"
  assembly="Beginor.NetCoreApp.Data" namespace="Beginor.NetCoreApp.Data.Entities">

  <class name="AppPrivilege" table="app_privileges" schema="public">
    <id name="Id" column="id" type="long">
      <generator class="trigger-identity">
      </generator>
    </id>

    <property name="Module" column="module" type="string" not-null="true" length="32" />
    <property name="Name" column="name" type="string" not-null="true" length="64" />
    <property name="Description" column="description" type="string" not-null="false" length="128" />
    <property name="IsRequired" column="is_required" type="bool" not-null="true" />
  </class>

</hibernate-mapping>
