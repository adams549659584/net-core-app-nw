<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-mapping
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns="urn:nhibernate-mapping-2.2"
  assembly="Beginor.NetCoreApp.Data" namespace="Beginor.NetCoreApp.Data.Entities">

  <class name="AppAttachment" table="app_attachments" schema="public">
    <id name="Id" column="id" type="long">
      <generator class="trigger-identity">
      </generator>
    </id>

    <property name="ContentType" column="content_type" type="string" not-null="true" length="64" />
    <!--<property name="Content" column="content" type="binary" not-null="false" />-->
    <property name="CreatedAt" column="created_at" type="datetime" not-null="true" />
    <!--<property name="CreatorId" column="creator_id" type="string" not-null="true" length="32" />-->
    <property name="FileName" column="file_name" type="string" not-null="true" length="256" />
    <property name="Length" column="length" type="long" not-null="true" />
    <property name="BusinessId" column="business_id" type="long" not-null="true" />

    <many-to-one name="Creator" column="creator_id" class="AppUser" not-found="ignore" />

  </class>

</hibernate-mapping>
